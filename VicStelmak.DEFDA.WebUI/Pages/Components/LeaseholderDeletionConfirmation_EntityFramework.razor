@inject NavigationManager _navManager

<div>
    <button class="btn btn-danger btn-sm" @onclick="@(l => DeleteLeaseholderAsync(Leaseholder.Id))" role="button">Confirm</button>
    <button class="btn btn-warning btn-sm" @onclick="@(() => CancelDeletion())" role="button">Cancel</button>
</div>

@code {
    [CascadingParameter]
    public IModalService? ModalService { get; set; }

    [Parameter]
    public LeaseholderModel Leaseholder { get; set; }

    private async Task DeleteLeaseholderAsync(int leaseholderId)
    {
        var leaseholder = await _leaseholderService.GetLeaseholderByIdAsync(leaseholderId);

        if (leaseholder != null)
        {
            await _leaseholderService.DeleteLeaseholderAsync(leaseholder);
        }

        _navManager.NavigateTo("/leaseholdersinformation_entityframework", forceLoad: true);
    }

    private void CancelDeletion()
    {
        _navManager.NavigateTo("/leaseholdersinformation_entityframework");
    }
}


