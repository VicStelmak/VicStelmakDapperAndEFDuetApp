@inject NavigationManager _navManager

<div>
    <button class="btn btn-danger btn-sm" @onclick="@(l => DeleteEmailAddressAsync(EmailAddress))" role="button">Confirm</button>
    <button class="btn btn-warning btn-sm" @onclick="@(() => CancelDeletion())" role="button">Cancel</button>
</div>

@code {
    [CascadingParameter]
    public IModalService? ModalService { get; set; }

    [Parameter]
    public EmailAddressModel EmailAddress { get; set; }

    private async Task DeleteEmailAddressAsync(EmailAddressModel emailAddress)
    {
        if (emailAddress != null)
        {
            await _emailAddressService.DeleteEmailAddressAsync(emailAddress);
        }

        _navManager.NavigateTo(_navManager.Uri, true);
    }

    private void CancelDeletion()
    {
        _navManager.NavigateTo(_navManager.Uri, true);
    }
}
