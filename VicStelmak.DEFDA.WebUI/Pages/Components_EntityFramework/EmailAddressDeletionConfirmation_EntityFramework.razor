@inject NavigationManager _navManager

<div>
    <button type="button" class="btn btn-danger btn-sm" @onclick="@(l => DeleteEmailAddressEfAsync(EmailAddressId))">Confirm</button>
    <button type="button" class="btn btn-warning btn-sm" @onclick="@(() => CancelDeletion())">Cancel</button>
</div>

@code {
    [Parameter]
    public int EmailAddressId { get; set; }

    private async Task DeleteEmailAddressEfAsync(int emailAddressId)
    {
        await _emailAddressServiceEf.DeleteEmailAddressEfAsync(emailAddressId);

        _navManager.NavigateTo(_navManager.Uri, true);
    }

    private void CancelDeletion()
    {
        _navManager.NavigateTo(_navManager.Uri, true);
    }
}
